<!DOCTYPE html>
<html lang="en">
    <%- include('components/head') %>
<body>

<%- include('components/nav') %>



<div class=" container-fluid mainsection" >
    <section class="container-fluid pb-5 " style="border-radius: 67px;background-color: #F2F2F2;">
        <div class="sections">
            <div class="container" id="top">
                <h1 class="text-center m-5">All Products</h1>
                <div class="d-flex flex-row flex-wrap justify-content-center">
                    <%for(let k=start;k<((end>start+20)?start+20:end);k++){%>
                    <div class="col-3 item m-2">
                        <a  href="/product/<%-product[k].product.id%>">
                            <img class="img-fluid" src="<%-product[k].product.images[0].path%>">

                        </a>
                        <div class="text-center d-flex flex-column">
                            <div>
                                <a  href="/product/<%-product[k].product.id%>">
                                    <b><%-product[k].product.name%></b>
                                </a>
                                <%if(auth){%>
                                <form>

                                    <%if(product[k].inWishList){%>
                                        <button class="btn btn-danger" style="border-radius: 100%; width: 25px; height: 25px;" disabled>  </button>
                                    <%} else{%>
                                    <button class="btn btn-success" style="border-radius: 100%; width: 25px; height: 25px;" onclick="addToMyWishList('<%-product[k].product.id%>')">  </button>
                                    <%}%>
                                </form>
                                <%}%>
                            </div>

                            <p><%-product[k].product.type.toString().toLowerCase()%></p>
                        </div>


                    </div>
                    <%}%>

                </div>

            </div>
        </div>
        <div class="d-flex flex-row justify-content-center">
            <%if(page!=1){%>
            <a href="/catalog/<%-page-1%>"><button class="btn btn-sm btn-secondary"><%-page-1%></button></a>
            <%}%>
            <a><button class="btn btn-sm btn-secondary"><%-page%></button></a>
            <%if(end-start>20){%>
            <a href="/catalog/<%-page+1%>"><button class="btn btn-sm btn-secondary"><%-page+1%></button></a>
            <%}%>
        </div>

    </section>
</div>
    <%- include("components/footer")%>
    
        
    
</body>
</html>