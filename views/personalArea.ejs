<!DOCTYPE html>
<html>
<head>
    <%- include('components/head') %>
    <title>Cabinet</title>
    <link href="/css/personalArea.css" rel="stylesheet">

</head>
<body>
<%- include('components/nav',{avatarUrl:avatar}) %>
<div class=" sections">
    <div class="container inSections">
        <div class="row">
            <div class="col">
                <div class="row">
                    <div id="balance" class="col"> <h6> Balance: </h6> </div>
                    <div id="bonuses" class="col"> <h6> Bonuses: </h6> </div>
                    <div class="tooltip">info
                        <span class="tooltiptext">info</span>
                    </div>
                </div>
            </div>
            <div class="col">
                <button class="buy" style="background-color: #9BD524"> Buy subscription </button>
            </div>
        </div>
    </div>



    <div class="tab " style="margin-left: 15%; margin-right: 15%">
        <button class="tablinks" onclick="openTab1(event, 'My Ads')">My Ads</button>
        <button class="tablinks" onclick="openTab1(event, 'Payments')">Payments</button>
        <button class="tablinks" onclick="openTab1(event, 'Profile')">Profile</button>
    </div>

    <!-- Tab content -->
    <div id="My Ads" class="tabcontent1">
        <h3>My Ads</h3>
        <div class="tab">
            <button class="tablinks" onclick="openTab(event, 'Active')">Active</button>
            <button class="tablinks" onclick="openTab(event, 'Waiting')">Waiting</button>
            <button class="tablinks" onclick="openTab(event, 'Unpaid')">Unpaid</button>
            <button class="tablinks" onclick="openTab(event, 'Inactive')">Inactive</button>
            <button class="tablinks" onclick="openTab(event, 'Rejected')">Rejected</button>
        </div>
    </div>

    <div id="Payments" class="tabcontent1">
        <h3>Payments</h3>
    </div>

    <div id="Profile" class="tabcontent1" style="display: block;">
        <%if(!edit){%>
            <h3>Profile <%-edit%></h3>
            <div class="container">
                <div class="main-body">
                    <div class="row gutters-sm">
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <%if(pavatarUrl){%>
                                            <img src="<%-pavatarUrl%>" alt="avatar" class="rounded-circle" width="150">
                                        <%} else{%>
                                            <img src="/avatars/ecce-homo.jpg" alt="avatar" class="rounded-circle" width="150">
                                        <%}%>
                                        <div class="mt-3">
                                            <h4><%-pusername%></h4>
                                            <%if(paddress){%>
                                                <p class="text-muted font-size-sm"><%-paddress%></p>
                                            <%}%>
                                            <button class="btn btn-outline-primary">Message</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card mt-3">
                                <ul class="list-group list-group-flush">
                                    <%if(ptwitterUrl){%>
                                        <li class="list-group-item d-flex justify-content-center align-items-center flex-wrap">
                                            <a href="<%-ptwitterUrl%>" class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter mr-2 icon-inline text-info"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>Twitter</a>
                                        </li>
                                    <%}%>
                                    <%if(pinstagramUrl){%>
                                        <li class="list-group-item d-flex justify-content-center align-items-center flex-wrap">
                                            <a href="<%-pinstagramUrl%>" class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram mr-2 icon-inline text-danger"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>Instagram</a>
                                        </li>
                                    <%}%>
                                    <%if(pfacebookUrl){%>
                                        <li class="list-group-item d-flex justify-content-center align-items-center flex-wrap">
                                            <a  href="<%-pfacebookUrl%>" class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>Facebook</a>
                                        </li>
                                    <%}%>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <%if(pfullname){%>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Full Name</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <%-pfullname%>
                                            </div>
                                        </div>
                                        <hr>
                                    <%}%>

                                    <%if(pemail){%>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Email</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <%-pemail%>
                                            </div>
                                        </div>
                                        <hr>
                                    <%}%>

                                    <%if(pphoneNumber){%>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Phone</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <%-pphoneNumber%>
                                            </div>
                                        </div>
                                        <hr>
                                    <%}%>
                                    <%if(paddress){%>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Address</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <%-paddress%>
                                            </div>
                                        </div>
                                        <hr>
                                    <%}%>
                                    <%if(pdescription){%>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Description</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <%-pdescription%>
                                            </div>
                                        </div>
                                        <hr>
                                    <%}%>

                                    <div class="row">
                                        <div class="col-sm-12">
                                            <a class="btn btn-info " target="__blank" href="/user/edit">Edit</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row gutters-sm">
                                <div class="col-sm-6 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h3>Comments <%-pcomments.length%></h3>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>

                    </div>
                </div>
            </div>
        <%} else{%>
        <h3>Profile</h3>
        <div class="container">
            <div class="main-body">
                <form method="post" action="/user/edit">
                    <div class="row gutters-sm">

                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex flex-column align-items-center text-center">
                                        <%if(pavatarUrl){%>
                                        <img src="<%-pavatarUrl%>" alt="avatar" class="rounded-circle" width="150">
                                        <%} else{%>
                                            <img src="/avatars/ecce-homo.jpg" alt="avatar" class="rounded-circle" width="150">
                                        <%}%>
                                        <input class="form-control" type="file" name="avatar">
                                        <div class="mt-3">
                                            <h4><%-pusername%></h4>
                                            <%if(paddress){%>
                                            <p class="text-muted font-size-sm"><%-paddress%></p>
                                            <%}%>
                                            <button class="btn btn-outline-primary">Message</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card mt-3">
                                <ul class="list-group list-group-flush">
                                    <%if(ptwitterUrl){%>
                                    <li class="list-group-item d-flex justify-content-center align-items-center flex-wrap">
                                        <a href="<%-ptwitterUrl%>" class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-twitter mr-2 icon-inline text-info"><path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path></svg>Twitter</a>
                                    </li>
                                    <%}%>
                                    <%if(pinstagramUrl){%>
                                    <li class="list-group-item d-flex justify-content-center align-items-center flex-wrap">
                                        <a href="<%-pinstagramUrl%>" class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram mr-2 icon-inline text-danger"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg>Instagram</a>
                                    </li>
                                    <%}%>
                                    <%if(pfacebookUrl){%>
                                    <li class="list-group-item d-flex justify-content-center align-items-center flex-wrap">
                                        <a  href="<%-pfacebookUrl%>" class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>Facebook</a>
                                    </li>
                                    <%}%>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Full Name</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" name="ifullname" class="form-control" value="<%-pfullname%>">
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Phone</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" name="iphonenumber" class="form-control" value="<%-pphoneNumber%>">
                                            </div>
                                        </div>
                                        <hr>

                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Address</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" name="iaddress" class="form-control" value="<%-paddress%>">
                                            </div>
                                        </div>
                                        <hr>

                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Description</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" name="idescription" class="form-control" value="<%-pdescription%>">
                                            </div>
                                        </div>
                                        <hr>

                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Twitter</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" name="itwitterUrl" class="form-control" value="<%-ptwitterUrl%>">
                                            </div>
                                        </div>
                                        <hr>

                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Instagram</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" name="iinstagramUrl" class="form-control" value="<%-pinstagramUrl%>">
                                            </div>
                                        </div>
                                        <hr>

                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">Facebook</h6>
                                            </div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="text" name="ifacebookUrl" class="form-control" value="<%-pfacebookUrl%>">
                                            </div>
                                        </div>
                                        <hr>

                                        <div class="row">
                                            <div class="col-sm-3"></div>
                                            <div class="col-sm-9 text-secondary">
                                                <input type="submit" class="btn btn-primary px-4" href="edit" value="Save Changes">
                                            </div>
                                        </div>


                                </div>
                            </div>

                            <div class="row gutters-sm">
                                <div class="col-sm-6 mb-3">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h3>Comments <%-pcomments.length%></h3>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
        <%}%>
    </div>




    <div id="Active" class="tabcontent">
        <h3>Active</h3>
        <h1 class="noAds">No Ads</h1>
        <button> Submit an ad </button>
    </div>

    <div id="Waiting" class="tabcontent">
        <h3>Waiting</h3>
        <p>text</p>
    </div>

    <div id="Unpaid" class="tabcontent">
        <h3>Unpaid</h3>
        <p>text</p>
    </div>

    <div id="Inactive" class="tabcontent">
        <h3>Inactive</h3>
        <p>text</p>
    </div>

    <div id="Rejected" class="tabcontent">
        <h3>Rejected</h3>
        <p>text</p>
    </div>
</div>
</div>

<%- include('components/footer')%>
<script src="/js/personalArea.js"></script>

</body>
</html>