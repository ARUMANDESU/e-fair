<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('components/head') %>
</head>
<body>
<%- include('components/nav' )%>
<div class=" container-fluid py-5 d-flex flex-wrap justify-content-center align-items-center " style="background-color: #f2f2f2; border-radius: 67px;">
    <table class="table  table-hover mx-5">
        <tr>
            <th>Product name</th>
            <th>Owner username</th>
            <th>Type</th>
            <th>Status</th>
            <th>Edit</th>
        </tr>
        <%products.forEach(data=>{%>
        <tr>
            <td> <a class="text pl-5" href="/product/<%-data.product.id%>"><h3><%-data.product.name%></h3></a></td>
            <td> <a class="text pl-5" href="/user/profile/<%-data.user.username%>"><img class="rounded-circle" width="65" src="<%-data.user.avatarUrl%>"><%-data.user.username%></a></td>
            <td><%-data.product.type%></td>
            <td><%-data.product.status%></td>
            <td>
                <form method="post" action="/catalog/remove/<%-data.product.id%>">
                    <button type="submit" class="btn btn-danger">remove</button>
                </form>
            </td>
        </tr>
        <%})%>
    </table>
</div>
<%- include('components/footer')%>
</body>
</html>